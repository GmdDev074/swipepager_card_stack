<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="34dp"
    app:cardElevation="18dp"
    app:cardUseCompatPadding="true">
    <!-- Removed android:background="@android:color/transparent" to make opaque -->

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Progress -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgCategory"
                android:src="@android:drawable/ic_info"
                app:tint="#808499"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtProgress"
                android:text="Card 1 of 3"
                android:textSize="14sp"
                android:textColor="#7B7E8F" />
        </LinearLayout>

        <!-- Question -->
        <TextView
            android:id="@+id/txtQuestion"
            android:text="Question?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#111111"
            android:layout_marginBottom="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/answersContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/addAnswerLayout"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="14dp"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_add_custom"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="#007BFF"
                android:src="@drawable/ic_add"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Or add your own"
                android:textSize="16sp"
                android:textColor="#007BFF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>